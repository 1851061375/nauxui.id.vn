<div class="row">
    <div class="col-md-6">
        <h4>Boxs</h4>
    </div>
    <div class="col-md-6 d-flex flex-row-reverse">
        <a href="box/create" class="btn btn-primary"  role="button">Add</a>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table mt-4">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Active</th>
                    <th scope="col">Empty</th>
                    <th scope="col">Created At</th>
                    <th scope="col" class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each boxs}}
                    <tr>
                        <th scope="row">{{sum @index 1}}</th>
                        <td>Box {{this.order}}</td>
                        <td>{{this.active}}</td>
                        <td>{{this.empty}}</td>
                        <td>{{this.createdAt}}</td>
                        <td class="text-center">
                            <a href="box/edit/{{this._id}}" type="button" class="btn btn-link">Edit</a>
                            <a type="button"  data-bs-toggle="modal" data-bs-target="#exampleModal"class="btn btn-link">Delete</a>
                        </td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Delete, you sure?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancle</button>
        <button type="button" class="btn btn-primary">Delete</button>
      </div>
    </div>
  </div>
</div>